<% if @posts != nil then %>
  <div class="jumbotron">
    <h1>Current Posts</h1> 
  </div>
    <% @posts.each do |post| %>
  <div class = "panel panel-primary">
     <div class = "panel-heading">
        <h3 class = "panel-title">Title: <%= post.title %><a href="/posts/edit/<%= post.id %>"><span class="glyphicon glyphicon-pencil" style="float:right;" title="edit post"></span></a>
      <a href="/posts/delete/<%= post.id %>"><span class="glyphicon glyphicon-remove" onclick="return confirm('Are you sure you want to delete this post?')" style="float:right;" title="delete post"></span></a></h3>
     </div>
   
     <div class = "panel-body">
        <%= post.body %>
     </div>
  </div>
    <% end %>
  <% end %>

<form action="/" align="center">
    <button type="submit" formmethod="get"  class="btn btn-primary">Home Page</button>
</form>