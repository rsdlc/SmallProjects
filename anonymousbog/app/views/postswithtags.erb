<% if @posts != nil then %>
  <div class="jumbotron">
    <h1>Current posts with the tag '<%= @tag.name %>'</h1> 
  </div>
    <% @posts.each do |post| %>
    <div class = "panel panel-success">
     <div class = "panel-heading">
        <h3 class = "panel-title">Title: <%= post.title %>            <a href="/posts/edit/<%= post.id %>"><span class="glyphicon glyphicon-pencil"></span></a>
      <a href="/posts/delete/<%= post.id %>"><span class="glyphicon glyphicon-remove" onclick="return confirm('Are you sure you want to delete this post?')"></span></a></h3>
     </div>
   
     <div class = "panel-body">
        <%= post.body %>
     </div>
  </div>
    <% end %>
    
  <% else %>
    <h2>No posts with those tags were found. Try another tag!</h2>
  <% end %>
  <br><br>
  <form action="/" align="center">
    <button type="submit" formmethod="get"  class="btn btn-primary">Home Page</button>
</form>

