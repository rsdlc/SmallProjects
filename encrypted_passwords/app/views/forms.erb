<form align="center" id="registerform" action="/user/register" method="post">
  <h1>create account</h1>
  Name:<br>
  <input type="text" name="name" required><br>
  Email:<br>
  <input type="email" name="email" required><br>
  Password:<br>
  <input type="password" name="password" required><br><br>
  <button type="submit">Submit</button>
</form>

<form align="center" id="loginform" action="/user/login" method="post">
  <h1>log in</h1>
  Email:<br>
  <input type="email" name="email" required><br>
  Password:<br>
  <input type="password" name="password" required><br><br>
  <button type="submit">Submit</button>
</form>